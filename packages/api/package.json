{
  "name": "@hail-mary/api",
  "version": "0.2.0",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "NODE_OPTIONS=--experimental-vm-modules ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "NODE_OPTIONS=--experimental-vm-modules node dist/index.js",
    "lint": "eslint src --ext .ts",
    "pretest": "npm -w @hail-mary/shared run build",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "migrate": "ts-node src/db/migrate.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "ts-node src/db/migrate.ts",
    "db:migrate:only": "ts-node src/db/migrate.ts",
    "db:push": "drizzle-kit push --force",
    "db:seed": "ts-node src/db/seed.ts",
    "db:init": "npm run db:push && npm run db:seed",
    "admin:reset-password": "ts-node src/scripts/reset-password.ts",
    "admin:list-users": "ts-node src/scripts/list-users.ts",
    "admin:create": "ts-node src/scripts/create-admin.ts"
  },
  "dependencies": {
    "@hail-mary/shared": "*",
    "@types/multer": "^2.0.0",
    "@types/passport": "^1.0.17",
    "@types/passport-google-oauth20": "^2.0.17",
    "bcryptjs": "^3.0.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csrf-csrf": "^3.2.2",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "form-data": "^4.0.5",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "pdf-parse": "^2.4.5",
    "pdf-to-png-converter": "^3.11.0",
    "pg": "^8.16.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-rate-limit": "^5.1.3",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.10.0",
    "@types/pdf-parse": "^1.1.5",
    "@types/pg": "^8.15.6",
    "@types/uuid": "^9.0.7",
    "drizzle-kit": "^0.31.8",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.0"
  }
}
