{
  "name": "@hail-mary/shared",
  "version": "0.1.0",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./atlas-voice": {
      "types": "./dist/atlas-voice/index.d.ts",
      "default": "./dist/atlas-voice/index.js"
    }
